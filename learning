        // ---------------- å…¨å±€çŠ¶æ€å˜é‡ ----------------
        let currentPinyinCategory = "shengmu";
        let selectedPinyin = null;
        let userAnswers = [];
        let currentQuestionIndex = 0;
        let recording = false;
        let mediaRecorder = null;
        let audioChunks = [];

        // å­¦ä¹ è¿›åº¦æ•°æ®
        let progressData = {
            shengmu: 0,
            yunmu: 0,
            zhiyin: 0,
            quizScore: 0,
            recordTimes: 0
        };

        // ---------------- DOMå…ƒç´ è·å– ----------------
        // æ ‡ç­¾å¯¼èˆª
        const tabBtns = document.querySelectorAll('.tab-btn');
        const tabContents = document.querySelectorAll('.tab-content');

        // æ‹¼éŸ³è®¤çŸ¥
        const categoryBtns = document.querySelectorAll('.category-btn');
        const pinyinGrid = document.getElementById('pinyin-grid');
        const readAllBtn = document.getElementById('read-all-btn');
        const readSelectedBtn = document.getElementById('read-selected-btn');
        const recordBtn = document.getElementById('record-btn');
        const recordTip = document.getElementById('record-tip');

        // ç­”é¢˜é—¯å…³
        const questionAreas = document.querySelectorAll('.question-area');
        const optionItems = document.querySelectorAll('.option-item');
        const nextBtns = document.querySelectorAll('.next-btn');
        const quizResult = document.getElementById('quiz-result');
        const totalScore = document.getElementById('total-score');
        const answerList = document.getElementById('answer-list');
        const quizRestartBtn = document.getElementById('quiz-restart-btn');

        // å­¦ä¹ è¿›åº¦
        const shengmuProgress = document.getElementById('shengmu-progress');
        const shengmuValue = document.getElementById('shengmu-value');
        const yunmuProgress = document.getElementById('yunmu-progress');
        const yunmuValue = document.getElementById('yunmu-value');
        const zhiyinProgress = document.getElementById('zhiyin-progress');
        const zhiyinValue = document.getElementById('zhiyin-value');
        const quizProgress = document.getElementById('quiz-progress');
        const quizValue = document.getElementById('quiz-value');
        const recordProgress = document.getElementById('record-progress');
        const recordValue = document.getElementById('record-value');
        const masteryList = document.getElementById('mastery-list');

        // ---------------- åˆå§‹åŒ–å‡½æ•° ----------------
        function init() {
            // åˆå§‹åŒ–æ‹¼éŸ³ç½‘æ ¼
            renderPinyinGrid();
            // åˆå§‹åŒ–è¿›åº¦æ˜¾ç¤º
            updateProgressDisplay();
            // åˆå§‹åŒ–æŒæ¡æƒ…å†µ
            renderMasteryList();
            // ç»‘å®šæ‰€æœ‰äº‹ä»¶
            bindEvents();
        }

        // ---------------- äº‹ä»¶ç»‘å®š ----------------
        function bindEvents() {
            // æ ‡ç­¾å¯¼èˆªåˆ‡æ¢
            tabBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    const targetTab = this.dataset.tab;
                    tabBtns.forEach(b => b.classList.remove('active'));
                    tabContents.forEach(c => c.classList.remove('active'));
                    this.classList.add('active');
                    document.getElementById(targetTab).classList.add('active');
                });
            });

            // æ‹¼éŸ³åˆ†ç±»åˆ‡æ¢
            categoryBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    currentPinyinCategory = this.dataset.category;
                    categoryBtns.forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    renderPinyinGrid();
                });
            });

            // æ‹¼éŸ³é¡¹ç‚¹å‡»äº‹ä»¶
            pinyinGrid.addEventListener('click', function(e) {
                const pinyinItem = e.target.closest('.pinyin-item');
                if (pinyinItem) {
                    // ç§»é™¤ä¹‹å‰é€‰ä¸­çš„æ ·å¼
                    document.querySelectorAll('.pinyin-item').forEach(item => {
                        item.style.backgroundColor = '#fff';
                    });
                    // è®¾ç½®å½“å‰é€‰ä¸­
                    pinyinItem.style.backgroundColor = '#d4edda';
                    selectedPinyin = {
                        char: pinyinItem.dataset.char,
                        pronounce: pinyinItem.dataset.pronounce
                    };

                    // æ›´æ–°å¯¹åº”åˆ†ç±»è¿›åº¦
                    updateCategoryProgress(currentPinyinCategory);
                }
            });

            // æœ—è¯»æ‰€æœ‰æ‹¼éŸ³
            readAllBtn.addEventListener('click', function() {
                const pinyins = pinyinData[currentPinyinCategory];
                let text = '';
                pinyins.forEach(p => {
                    text += p.char + 'ï¼Œè¯»ä½œ' + p.pronounce + 'ã€‚';
                });
                speakText(text);
            });

            // æœ—è¯»é€‰ä¸­æ‹¼éŸ³
            readSelectedBtn.addEventListener('click', function() {
                if (selectedPinyin) {
                    const text = selectedPinyin.char + 'ï¼Œè¯»ä½œ' + selectedPinyin.pronounce + 'ã€‚';
                    speakText(text);
                } else {
                    alert('è¯·å…ˆé€‰ä¸­ä¸€ä¸ªæ‹¼éŸ³å“¦ï¼');
                }
            });

            // å½•éŸ³è·Ÿè¯»
            recordBtn.addEventListener('click', async function() {
                if (!recording) {
                    // å¼€å§‹å½•éŸ³
                    try {
                        const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
                        mediaRecorder = new MediaRecorder(stream);
                        audioChunks = [];

                        mediaRecorder.addEventListener('dataavailable', function(e) {
                            audioChunks.push(e.data);
                        });

                        mediaRecorder.start();
                        recording = true;
                        this.classList.add('recording');
                        recordTip.classList.add('show');

                        // å½•éŸ³ç»“æŸåå¤„ç†
                        mediaRecorder.addEventListener('stop', function() {
                            const audioBlob = new Blob(audioChunks, { type: 'audio/wav' });
                            const audioUrl = URL.createObjectURL(audioBlob);
                            const audio = new Audio(audioUrl);
                            audio.play();

                            // åœæ­¢æ‰€æœ‰éŸ³è½¨
                            stream.getTracks().forEach(track => track.stop());

                            // æ›´æ–°å½•éŸ³æ¬¡æ•°
                            progressData.recordTimes++;
                            updateProgressData();
                            updateProgressDisplay();
                        });
                    } catch (err) {
                        alert('å½•éŸ³æƒé™è¢«æ‹’ç»ï¼Œè¯·å¼€å¯éº¦å…‹é£æƒé™åå†è¯•ï¼');
                        console.error('å½•éŸ³å¤±è´¥ï¼š', err);
                    }
                } else {
                    // ç»“æŸå½•éŸ³
                    mediaRecorder.stop();
                    recording = false;
                    this.classList.remove('recording');
                    recordTip.classList.remove('show');
                }
            });

            // ç­”é¢˜é€‰é¡¹ç‚¹å‡»
            optionItems.forEach(option => {
                option.addEventListener('click', function() {
                    const parentOptions = this.parentElement;
                    parentOptions.querySelectorAll('.option-item').forEach(item => {
                        item.classList.remove('selected');
                    });
                    this.classList.add('selected');

                    const questionIndex = this.closest('.question-area').dataset.index;
                    userAnswers[questionIndex] = {
                        selected: this.textContent,
                        isCorrect: this.dataset.answer === 'true'
                    };

                    const nextBtn = this.closest('.question-area').querySelector('.next-btn');
                    nextBtn.style.display = 'inline-block';
                });
            });

            // ä¸‹ä¸€é¢˜æŒ‰é’®
            nextBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    const currentQuestion = this.closest('.question-area');
                    const currentIndex = parseInt(currentQuestion.dataset.index);
                    currentQuestion.classList.remove('active');

                    if (currentIndex < questionAreas.length - 1) {
                        currentQuestionIndex = currentIndex + 1;
                        questionAreas[currentQuestionIndex].classList.add('active');
                    } else {
                        // æ˜¾ç¤ºæˆç»©
                        showQuizResult();
                    }
                });
            });

            // é‡æ–°é—¯å…³
            quizRestartBtn.addEventListener('click', function() {
                userAnswers = [];
                currentQuestionIndex = 0;
                quizResult.style.display = 'none';

                questionAreas.forEach((area, index) => {
                    area.classList.remove('active');
                    if (index === 0) {
                        area.classList.add('active');
                    }
                    area.querySelectorAll('.option-item').forEach(item => {
                        item.classList.remove('selected');
                    });
                    area.querySelector('.next-btn').style.display = 'none';
                });
            });
        }

        // ---------------- æ‹¼éŸ³ç½‘æ ¼æ¸²æŸ“ ----------------
        function renderPinyinGrid() {
            pinyinGrid.innerHTML = '';
            const pinyins = pinyinData[currentPinyinCategory];

            pinyins.forEach(pinyin => {
                const pinyinItem = document.createElement('div');
                pinyinItem.className = 'pinyin-item';
                pinyinItem.dataset.char = pinyin.char;
                pinyinItem.dataset.pronounce = pinyin.pronounce;
                pinyinItem.innerHTML = `
                    <div class="pinyin-char">${pinyin.char}</div>
                    <div class="pinyin-pronounce">${pinyin.pronounce}</div>
                `;
                pinyinGrid.appendChild(pinyinItem);
            });
        }

        // ---------------- æ–‡å­—æœ—è¯»åŠŸèƒ½ ----------------
        function speakText(text) {
            // æ£€æŸ¥æµè§ˆå™¨æ˜¯å¦æ”¯æŒè¯­éŸ³åˆæˆ
            if ('speechSynthesis' in window) {
                // åœæ­¢ä¹‹å‰çš„æœ—è¯»
                window.speechSynthesis.cancel();

                const utterance = new SpeechSynthesisUtterance(text);
                // è®¾ç½®è¯­è¨€ä¸ºä¸­æ–‡
                utterance.lang = 'zh-CN';
                // è®¾ç½®è¯­é€Ÿï¼ˆ0.1-10ï¼Œé»˜è®¤1ï¼‰
                utterance.rate = 0.9;
                // è®¾ç½®éŸ³é‡ï¼ˆ0-1ï¼Œé»˜è®¤1ï¼‰
                utterance.volume = 1;
                // è®¾ç½®éŸ³è°ƒï¼ˆ0-2ï¼Œé»˜è®¤1ï¼‰
                utterance.pitch = 1.2; // ç¨é«˜éŸ³è°ƒï¼Œæ›´é€‚åˆå°æœ‹å‹

                window.speechSynthesis.speak(utterance);
            } else {
                alert('ä½ çš„æµè§ˆå™¨ä¸æ”¯æŒæ–‡å­—æœ—è¯»åŠŸèƒ½ï¼Œè¯·æ›´æ¢ç°ä»£æµè§ˆå™¨ï¼ˆå¦‚Chromeã€Edgeï¼‰ï¼');
            }
        }

        // ---------------- ç­”é¢˜ç»“æœå±•ç¤º ----------------
        function showQuizResult() {
            // è®¡ç®—æ€»åˆ†
            let score = 0;
            userAnswers.forEach(answer => {
                if (answer && answer.isCorrect) {
                    score += 10;
                }
            });
            totalScore.textContent = score;
            progressData.quizScore = score;
            updateProgressData();

            // ç”Ÿæˆç­”æ¡ˆåˆ—è¡¨
            answerList.innerHTML = '';
            questionData.forEach((data, index) => {
                const answerItem = document.createElement('div');
                answerItem.className = 'answer-item';
                answerItem.innerHTML = `
                    <div class="answer-question">${data.title}</div>
                    <div class="answer-correct">æ­£ç¡®ç­”æ¡ˆï¼š${data.correctAnswer}</div>
                    <div class="answer-analysis">è§£æï¼š${data.analysis}</div>
                `;
                answerList.appendChild(answerItem);
            });

            // æ˜¾ç¤ºç»“æœ
            quizResult.style.display = 'block';
            // æ›´æ–°è¿›åº¦æ˜¾ç¤º
            updateProgressDisplay();
        }

        // ---------------- å­¦ä¹ è¿›åº¦æ›´æ–° ----------------
        function updateCategoryProgress(category) {
            // æ¯ä¸ªåˆ†ç±»ç‚¹å‡»ä¸€æ¬¡æ‹¼éŸ³ï¼Œè¿›åº¦å¢åŠ ä¸€å®šæ¯”ä¾‹
            switch (category) {
                case 'shengmu':
                    progressData.shengmu = Math.min(100, progressData.shengmu + 5);
                    break;
                case 'yunmu':
                    progressData.yunmu = Math.min(100, progressData.yunmu + 5);
                    break;
                case 'zhiyin':
                    progressData.zhiyin = Math.min(100, progressData.zhiyin + 8);
                    break;
            }
            updateProgressData();
            updateProgressDisplay();
        }

        function updateProgressData() {
            // ä¿å­˜åˆ°æœ¬åœ°å­˜å‚¨ï¼Œåˆ·æ–°é¡µé¢ä¸ä¸¢å¤±
            localStorage.setItem('pinyinProgress', JSON.stringify(progressData));
        }

        function loadProgressData() {
            // ä»æœ¬åœ°å­˜å‚¨åŠ è½½è¿›åº¦
            const savedProgress = localStorage.getItem('pinyinProgress');
            if (savedProgress) {
                progressData = JSON.parse(savedProgress);
            }
        }

        function updateProgressDisplay() {
            // æ›´æ–°è¿›åº¦æ¡å’Œæ•°å€¼
            shengmuProgress.style.width = `${progressData.shengmu}%`;
            shengmuValue.textContent = `${progressData.shengmu}%`;

            yunmuProgress.style.width = `${progressData.yunmu}%`;
            yunmuValue.textContent = `${progressData.yunmu}%`;

            zhiyinProgress.style.width = `${progressData.zhiyin}%`;
            zhiyinValue.textContent = `${progressData.zhiyin}%`;

            const quizPercent = (progressData.quizScore / 100) * 100;
            quizProgress.style.width = `${quizPercent}%`;
            quizValue.textContent = `${progressData.quizScore}/100`;

            const recordPercent = Math.min(100, (progressData.recordTimes / 20) * 100);
            recordProgress.style.width = `${recordPercent}%`;
            recordValue.textContent = `${progressData.recordTimes}æ¬¡`;

            // æ›´æ–°æŒæ¡æƒ…å†µ
            renderMasteryList();
        }

        // ---------------- æ‹¼éŸ³æŒæ¡æƒ…å†µæ¸²æŸ“ ----------------
        function renderMasteryList() {
            masteryList.innerHTML = '';
            const categories = [
                { name: 'å£°æ¯', value: progressData.shengmu },
                { name: 'éŸµæ¯', value: progressData.yunmu },
                { name: 'æ•´ä½“è®¤è¯»éŸ³èŠ‚', value: progressData.zhiyin },
                { name: 'ç­”é¢˜èƒ½åŠ›', value: (progressData.quizScore / 100) * 100 },
                { name: 'å£è¯­è·Ÿè¯»', value: Math.min(100, (progressData.recordTimes / 20) * 100) }
            ];

            categories.forEach(item => {
                const masteryItem = document.createElement('div');
                masteryItem.className = 'mastery-item';
                let level = '';
                if (item.value < 30) {
                    level = 'å…¥é—¨';
                } else if (item.value < 60) {
                    level = 'ç†Ÿç»ƒ';
                } else if (item.value < 90) {
                    level = 'ç²¾é€š';
                } else {
                    level = 'å¤§å¸ˆ';
                }
                masteryItem.innerHTML = `
                    <div class="mastery-name">${item.name}</div>
                    <div class="mastery-level">${level}</div>
                `;
                masteryList.appendChild(masteryItem);
            });
        }

        // ---------------- åˆå§‹åŒ–æ‰§è¡Œ ----------------
        loadProgressData();
        init();
    </script>
</body>
</html>
